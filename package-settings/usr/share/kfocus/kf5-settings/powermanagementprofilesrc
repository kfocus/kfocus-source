[AC]
icon=battery-charging

[AC][BrightnessControl]
value=75

[AC][DPMSControl]
idleTime=600
lockBeforeTurnOff=0

[AC][DimDisplay]
idleTime=300000

[AC][HandleButtonEvents]
lidAction=1
powerButtonAction=16
powerDownAction=16
triggerLidActionWhenExternalMonitorPresent=true

[AC][RunScript]
idleTime=600000
scriptCommand=/usr/lib/kfocus/bin/kfocus-pstate -s AC
scriptPhase=0

[Battery]
icon=battery-060

[Battery][BrightnessControl]
